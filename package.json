{
  "name": "ugross-dev",
  "private": true,
  "description": "Personal site",
  "version": "1.0.0",
  "author": "Rostyslav Ugryniuk <ug.ross@hotmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "npm run lint && gatsby build",
    "start": "gatsby develop",
    "format": "prettier --write 'src/**/*.{js,ts,tsx}'",
    "lint": "npm run lint:ts && npm run lint:md && npm run lint:css",
    "lint:ts": "tsc --noEmit --skipLibCheck && eslint 'src/**.{js,ts,tsx}' --quiet --fix",
    "lint:md": "remark .",
    "lint:css": "stylelint 'src/*/**.{css,scss}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --check 'src/**.{js,jsx,tsx,ts,scss,css}' && lint-staged"
    }
  },
  "lint-staged": {
    "src/**.{js,jsx,ts,tsx}": "eslint --cache",
    "src/**.{css,scss}": "stylelint --config .stylelintrc.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/UgRoss/ugross.dev"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "classnames": "^2.2.6",
    "gatsby": "^2.21.13",
    "gatsby-image": "^2.4.1",
    "gatsby-plugin-alias-imports": "^1.0.5",
    "gatsby-plugin-google-analytics": "^2.3.1",
    "gatsby-plugin-manifest": "^2.4.2",
    "gatsby-plugin-netlify-cms": "^4.3.1",
    "gatsby-plugin-offline": "^3.2.1",
    "gatsby-plugin-react-helmet": "^3.3.1",
    "gatsby-plugin-sharp": "^2.6.1",
    "gatsby-plugin-typescript": "^2.4.2",
    "gatsby-remark-autolink-headers": "^2.3.1",
    "gatsby-remark-copy-linked-files": "^2.3.2",
    "gatsby-remark-external-links": "0.0.4",
    "gatsby-remark-images": "^3.3.1",
    "gatsby-remark-prismjs": "^3.5.1",
    "gatsby-remark-relative-images": "^0.3.0",
    "gatsby-remark-responsive-iframe": "^2.4.2",
    "gatsby-source-filesystem": "^2.3.1",
    "gatsby-transformer-remark": "^2.8.6",
    "gatsby-transformer-sharp": "^2.5.1",
    "lodash": "^4.17.15",
    "netlify-cms-app": "^2.12.12",
    "normalize.css": "^8.0.1",
    "polished": "^3.6.1",
    "prismjs": "^1.20.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-feather": "^2.0.8",
    "react-helmet": "^6.0.0",
    "react-use": "^14.2.0",
    "snarkdown": "^1.2.2",
    "styled-components": "^5.1.0"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.10",
    "@types/node": "^13.13.5",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.7",
    "@types/react-helmet": "^5.0.15",
    "@types/react-test-renderer": "^16.9.2",
    "@types/styled-components": "^5.1.0",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "babel-plugin-styled-components": "^1.10.7",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "gatsby-plugin-sass": "^2.3.1",
    "gatsby-plugin-styled-components": "^3.3.1",
    "gatsby-plugin-stylelint": "^3.2.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "node-sass": "^4.14.1",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "remark-cli": "^8.0.0",
    "remark-preset-lint-recommended": "^4.0.0",
    "stylelint": "^13.3.3",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "stylelint-scss": "^3.17.1",
    "stylelint-webpack-plugin": "^1.2.3",
    "typescript": "^3.8.3"
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended"
    ]
  }
}
