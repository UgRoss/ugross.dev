{
  "name": "ugross-dev",
  "private": true,
  "description": "Personal site",
  "version": "1.0.0",
  "author": "Rostyslav Ugryniuk <ug.ross@hotmail.com>",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "build": "npm run lint && gatsby build",
    "start": "gatsby develop",
    "format": "prettier --write 'src/**/*.{js,ts,tsx}'",
    "lint": "npm run lint:ts && npm run lint:css",
    "lint:ts": "tsc --noEmit --skipLibCheck && eslint 'src/**/*.{js,ts,tsx}'",
    "lint:css": "stylelint 'src/*/**.{css,scss,tsx}'",
    "codegen": "graphql-codegen --config graphql-codegen.yml",
    "postcodegen": "prettier --write src/types/graphql.ts",
    "husky:precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**.{js,jsx,tsx,ts,scss,css}": "prettier --write",
    "src/**.{js,jsx,ts,tsx}": "eslint",
    "src/**.{css,scss,tsx}": "stylelint --config .stylelintrc.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/UgRoss/ugross.dev"
  },
  "dependencies": {
    "@mdx-js/mdx": "^1.6.22",
    "@mdx-js/react": "^1.6.22",
    "classnames": "^2.2.6",
    "gatsby": "^2.32.8",
    "gatsby-image": "^2.11.0",
    "gatsby-plugin-alias-imports": "^1.0.5",
    "gatsby-plugin-feed": "^2.13.1",
    "gatsby-plugin-google-analytics": "^2.11.0",
    "gatsby-plugin-image": "^0.7.2",
    "gatsby-plugin-manifest": "^2.12.1",
    "gatsby-plugin-mdx": "^1.10.1",
    "gatsby-plugin-offline": "^3.10.2",
    "gatsby-plugin-react-helmet": "^3.10.0",
    "gatsby-plugin-sass": "^3.2.0",
    "gatsby-plugin-sharp": "^2.14.3",
    "gatsby-plugin-typescript": "^2.12.1",
    "gatsby-remark-copy-linked-files": "^2.10.0",
    "gatsby-remark-external-links": "0.0.4",
    "gatsby-remark-images": "^3.11.1",
    "gatsby-remark-prismjs": "^3.13.0",
    "gatsby-remark-relative-images": "^2.0.2",
    "gatsby-remark-responsive-iframe": "^2.11.0",
    "gatsby-source-filesystem": "^2.11.1",
    "gatsby-transformer-sharp": "^2.12.0",
    "lodash": "^4.17.21",
    "normalize.css": "^8.0.1",
    "prismjs": "^1.23.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-feather": "^2.0.9",
    "react-helmet": "^6.1.0",
    "react-use": "^17.1.1"
  },
  "devDependencies": {
    "@fec/remark-a11y-emoji": "^3.0.0",
    "@graphql-codegen/cli": "^1.21.1",
    "@graphql-codegen/typescript": "^1.21.0",
    "@graphql-codegen/typescript-operations": "^1.17.14",
    "@types/classnames": "^2.2.11",
    "@types/node": "^14.14.31",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/react-helmet": "^6.1.0",
    "@types/styled-components": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "babel-plugin-styled-components": "^1.12.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "gatsby-plugin-styled-components": "^3.10.0",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "postcss": "^8.2.7",
    "prettier": "^2.2.1",
    "sass": "^1.32.8",
    "styled-components": "^5.2.1",
    "stylelint": "^13.11.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-scss": "^3.19.0",
    "typescript": "^4.2.2"
  }
}
